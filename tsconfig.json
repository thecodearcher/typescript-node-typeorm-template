{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "pretty": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ES6",
            "DOM"
        ],
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
    ],
}